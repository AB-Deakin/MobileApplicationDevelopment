<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lime"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/unitConverterApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="38sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="@string/unit_converter" />

    <Spinner
        android:id="@+id/fromConvertSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:entries="@array/unitTypes"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:minHeight="48dp" />

    <Spinner
        android:id="@+id/toConvertSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:entries="@array/unitTypes"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/toConvert"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autofillHints="autofillHint"
        android:hint="@string/enter_value"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColorHint="#546E7A" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/convert"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/conversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/result"
        android:textAlignment="center"
        android:textSize="45sp" />


</LinearLayout>